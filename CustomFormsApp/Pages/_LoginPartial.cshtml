@using CustomFormsApp.Services
@inject ClerkAuthService ClerkAuth
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<ul class="navbar-nav">
@if (ClerkAuth.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link" href="/Account/Manage">Hello @(ClerkAuth.CurrentUser?.FirstName ?? "User")!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" id="logout-form" action="javascript:void(0);" method="post" 
              onsubmit="event.preventDefault(); window.clerkInterop.signOut();">
            <button type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" href="/Account/Login?action=signup">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Account/Login">Login</a>
    </li>
}
</ul>
