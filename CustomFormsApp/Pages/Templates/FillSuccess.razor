@page "/forms/fill/{TemplateId:int}/success"
@inject NavigationManager Navigation

<PageTitle>Response Submitted</PageTitle>

<div class="container mt-5 text-center">
    <div class="card shadow-sm mx-auto" style="max-width: 500px;">
        <div class="card-body p-5">
            <i class="bi bi-check-circle-fill text-success display-3 mb-3"></i>
            <h2 class="card-title">Thank You!</h2>
            <p class="card-text">Your response has been successfully submitted.</p>
            <div class="mt-4">
                <button class="btn btn-primary me-2" @onclick="GoToViewTemplate">
                    <i class="bi bi-eye me-1"></i> View Template Details
                </button>
                <button class="btn btn-secondary" @onclick="GoToHome">
                    <i class="bi bi-house me-1"></i> Back to Home
                </button>
                @* Optional: Add button to fill again or view responses if applicable *@
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int TemplateId { get; set; }

    private void GoToViewTemplate()
    {
        if (TemplateId > 0)
        {
            Navigation.NavigateTo($"/templates/view/{TemplateId}");
        }
        else
        {
            GoToHome(); // Fallback if ID is missing
        }
    }

    private void GoToHome()
    {
        Navigation.NavigateTo("/");
    }
}